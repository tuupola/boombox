{
    "name": "tuupola/boombox",
    "description": "Beacon toolkit for Boomerang",
    "keywords": [
        "rum",
        "influxdb",
        "beacon",
        "boomerang",
        "statsd"
    ],
    "homepage": "https://github.com/tuupola/boombox",
    "license": "MIT",
    "authors": [
        {
            "name": "Mika Tuupola",
            "email": "tuupola@appelsiini.net",
            "homepage": "http://www.appelsiini.net/",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.4.0",
        "tuupola/witchcraft": "^1.0"
    },
    "require-dev": {
        "domnikl/statsd": "^2.3",
        "influxdb/influxdb-php": "^1.2"
    },
    "suggest": {
        "influxdb/influxdb-php": "For InfluxDB support",
        "domnikl/statsd": "For StatsD support"
    },
    "autoload": {
        "psr-4": {
            "Boombox\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Boombox\\Test\\": "tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^5.2",
        "squizlabs/php_codesniffer": "^2.5"
    }
}
